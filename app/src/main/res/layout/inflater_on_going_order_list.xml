<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_taxi_list_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_my_orderfrom_to"
            style="@style/TaxiListItem"
            android:text="Colombo to Moratuwa"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/text_my_order_time"
            style="@style/TaxiListItem"
            android:text="2016-01-01 13:30" />


        <TextView
            android:id="@+id/text_my_order_name"
            style="@style/TaxiListItem"
            android:text="Driver Name" />


    </LinearLayout>

</android.support.v7.widget.CardView>
