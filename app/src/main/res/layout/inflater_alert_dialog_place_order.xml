<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_from"
            style="@style/PlaceOrderDialogViewItem"
            android:enabled="false"
            android:text="From: Moratuwa" />


        <EditText
            android:id="@+id/edit_to"
            style="@style/PlaceOrderDialogViewItem"
            android:enabled="false"
            android:text="To: Bambalapitiya" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/text_contact"
                style="@style/PlaceOrderDialogViewItem"
                android:hint="Contact number"
                android:inputType="phone" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_date"
            style="@style/PlaceOrderDialogViewItem"
            android:spinnerMode="dropdown" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_time"
                style="@style/PlaceOrderDialogViewItem"
                android:clickable="true"
                android:focusable="false"
                android:hint="Pick a time..."
                android:inputType="time" />
        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/text_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Add a extra note here..."
            android:inputType="text"
            android:lines="3"
            android:maxLines="3" />


    </LinearLayout>
</ScrollView>